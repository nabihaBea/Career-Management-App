<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyListActivity"
    android:weightSum="7"
    android:orientation="vertical"
    android:background="#121212"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@drawable/header_bg"
        android:padding="30dp"
        android:gravity="bottom"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMPANIES"
            android:textSize="35dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/oneline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Your Future Company"
            android:textSize="20dp"
            android:textColor="@color/white"/>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <ImageButton
                android:id="@+id/companybtn1"
                android:layout_width="330dp"
                android:layout_height="330dp"
                android:src="@drawable/gggggg"
                android:layout_gravity="center"
                android:background="@null"
                android:elevation="3dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                />
            <ImageButton
                android:id="@+id/companybtn2"
                android:layout_width="330dp"
                android:layout_height="330dp"
                android:src="@drawable/gggggg"
                android:layout_gravity="center"
                android:background="@null"
                android:elevation="3dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                />
            <ImageButton
                android:id="@+id/companybtn3"
                android:layout_width="330dp"
                android:layout_height="330dp"
                android:src="@drawable/gggggg"
                android:layout_gravity="center"
                android:background="@null"
                android:elevation="3dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                />
            <ImageButton
                android:id="@+id/companybtn4"
                android:layout_width="330dp"
                android:layout_height="330dp"
                android:src="@drawable/gggggg"
                android:layout_gravity="center"
                android:background="@null"
                android:elevation="3dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>